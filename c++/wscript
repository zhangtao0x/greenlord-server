import Options
from os import unlink,symlink,popen
from os.path import exists

srcdir = "."
blddir = "build"
VERSION = "0.0.1"

def set_options(opt):
	opt.tool_options("compiler_cxx")

def configure(conf):
	conf.check_tool("compiler_cxx")

def build(bld):
	obj = bld.new_task_gen("cxx","shlib","node_addon")
	obj.target = "foo"
	obj.source = "foo.cpp"
	obj.cxxflag = ["-D_FILE_OFFSET_BITS=64", "-D_LARGEFILE_SOURCE"]

def shutdown():
	  if Options.commands['clean']:
	      if exists('cpphello.node'): unlink('cpphello.node')
					    else:
						        if exists('build/default/cpphello.node') and not exists('cpphello.node'):
								      symlink('build/default/cpphello.node', 'cpphello.node')
